#!/bin/bash
instance=ec2-52-57-249-229.eu-central-1.compute.amazonaws.com
key=~/.ssh/jenkins-key.pem

if [ ! $1 ]; then
	ssh -i $key ubuntu@$instance
elif [ "$1" = "send" ]; then

	if [ -f "$2" ]  ; then 
		echo sending file to $instance
		scp -i ${key} ${2} ubuntu@${instance}:${3}
		exit
	fi 
	echo amazon send [path to file]
	instance=ec2-52-58-126-187.eu-central-1.compute.amazonaws.com
	ssh -i $key ubuntu@$instance
elif [ "$1 " ]; then
	ssh -i $key ubuntu@${1}
fi
